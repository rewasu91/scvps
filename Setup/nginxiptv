server {
	listen 80 default_server;
	listen [::]:80 default_server;

        root /var/www/html;

        index fqdmn.html;

        server_name DOMAIN_NAME;

location / {
		try_files $uri $uri/ =404;
	}
	
	error_page 400 401 402 403 404 405 406 407 408 409 410 411 412 413 414 415 416 417 418 421 422 423 424 425 426 428 429 431 451 500 501 502 503 504 505 506 507 508 510 511 /fqdmn.html;

	location = /fqdmn.html {
		ssi on;
		internal;
		auth_basic off;
		root /var/www/html;
	}
}
