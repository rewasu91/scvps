	echo -e "${keatas} ${bgPutih} TERIMA KASIH KERANA MENGGUNAKAN AUTOSKRIP INI ${plain} ${keatas}"
	laneBot
	echo -e ""
	exit 0
}


	laneTop
	echo -e "${keatas} ${bgPutih}             MEMBUAT AKAUN TROJAN              ${plain} ${keatas}"
	laneBot
	echo -e ""
	echo -e "  ${green}Limit Kuota (Dalam format GB)${Suffix}"
	echo -e "  Sila taip ${yellow}0${Suffix} untuk ${yellow}Unlimited Kuota${Suffix}"
	echo -e ""
	echo -e "  ${green}Limit IP Address${Suffix}"
	echo -e "  Sila taip ${yellow}0${Suffix} untuk ${yellow}Tiada Limit IP Address${Suffix}"
	echo -e "  Atau taip ${yellow}1${Suffix} untuk mencegah ${yellow}Multilogin${Suffix}"
	echo -e ""
	echo -e "${BlueCyan}───────────────────────────────────────────────────${Suffix}"

echo -e ""
LOGO
echo -e "  1.)  Semua Jenis Akaun Trojan"
