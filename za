#!/bin/bash
#Script Add Trojan

red='\e[38;1;31m'
green='\e[38;1;32m'
yellow='\e[38;1;33m'
blue='\e[38;5;27m'
purple='\e[38;5;166m'
WhiteB="\e[5;37m"
BlueCyan="\e[38;1;36m"
Green_background="\033[42;37m"
Red_background="\033[41;37m"
